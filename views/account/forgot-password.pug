doctype html
html
    head
        include ../partials/head

    body.bg-dark
        .container
            .card.card-login.mx-auto.mt-5
                .card-header Forgot Password
                .card-body
                    include ../partials/flash
                    .text-center.mb-4
                        h4 Forgot your password?
                        p Enter your email address and we will send you instructions on how to reset your password.

                    form(id="forgot-password-form", method='POST')
                        input(type='hidden', name='_csrf', value=_csrf)
                        .form-group
                            .form-label-group
                                input(type="email" id="email" name="email" class="form-control" placeholder="Enter email address" required="required" autofocus="autofocus")
                                label(for="email") Email address

                        button(class="btn btn-primary btn-block" type="submit") Submit

                        .text-center
                            a(class="d-block small mt-3" href="/register") Register an Account
                            a(class="d-block small" href="/login") Login

        include ../partials/javascript

