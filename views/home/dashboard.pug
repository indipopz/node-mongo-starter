extends ../layout

block content
    .row
        .col-xl-3.col-sm-6.mb-3
            .card.text-white.bg-primary.o-hidden.h-100
                .card-body
                    .card-body-icon
                        i(class="fas fa-fw fa-comments")
                    .mr-5 26 New Messages!
                a( class="card-footer text-white clearfix small z-1" href="#")
                    span( class="float-left") View Details
                    span( class="float-right")
                        i(class="fas fa-angle-right")

        .col-xl-3.col-sm-6.mb-3
            .card.text-white.bg-warning.o-hidden.h-100
                .card-body
                    .card-body-icon
                        i(class="fas fa-fw fa-list")
                    .mr-5 11 New Tasks!
                a( class="card-footer text-white clearfix small z-1" href="#")
                    span( class="float-left") View Details
                    span( class="float-right")
                        i(class="fas fa-angle-right")

        .col-xl-3.col-sm-6.mb-3
                .card.text-white.bg-success.o-hidden.h-100
                    .card-body
                        .card-body-icon
                            i(class="fas fa-fw fa-shopping-cart")
                        .mr-5 123 New Orders!
                    a( class="card-footer text-white clearfix small z-1" href="#")
                        span( class="float-left") View Details
                        span( class="float-right")
                            i(class="fas fa-angle-right")

        .col-xl-3.col-sm-6.mb-3
                .card.text-white.bg-danger.o-hidden.h-100
                    .card-body
                        .card-body-icon
                            i(class="fas fa-fw fa-life-ring")
                        .mr-5 13 New Tickets!
                    a( class="card-footer text-white clearfix small z-1" href="#")
                        span( class="float-left") View Details
                        span( class="float-right")
                            i(class="fas fa-angle-right")

    <!-- Area Chart Example-->
    .card.mb-3
        .card-header
            i(class="fas fa-chart-area")
            | Area Chart Example
        .card-body
            canvas(id="myAreaChart" width="100%" height="30")
        .card-footer.small.text-muted
            | Updated yesterday at 11:59 PM


