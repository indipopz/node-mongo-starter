doctype html
html
    head
        include partials/head

    body(id="page-top")
        include partials/header
        #wrapper
            include partials/sidebar
            #content-wrapper
                .container-fluid
                
                    <!-- Breadcrumbs-->
                    include partials/breadcrumb

                    <!-- Flash Message-->
                    include partials/flash

